@model IEnumerable<DCAS_PracticalExam.HelperModels.EvaluationResult>

@if (Model.Any())
{
<h3 class="text-center mt-2">CPR Assessment Evaluation Reports</h3>
<br/>  
    <div class="row">
        <div class="col-12">
            <div style="width:90%; margin:0 auto;">
                <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead class="table-dark mt-5">
                        <tr>
                            <th>Candidate Name</th>
                            <th>Test Date</th>
                            <th>Result</th>
                            <th>Report</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.CandidateName</td>
                            <td>@item.TestDate</td>
                            <td>@item.Result</td>
                            <td><a asp-controller="Form" asp-action="ViewCPRReport" asp-route-id="@item.ID" class="btn btn-primary text-white">View Report</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
}
else
{
    <h1>No Data In Table</h1>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
