                            <span asp-validation-for="Question6Check" class="text-danger"></span>
                        </td>
                        <td>
                            <input type="checkbox" asp-for="Question6Remediation"  disabled readonly/>
                            <span asp-validation-for="Question6Remediation" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
