@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/signature_pad.js"></script>
<script type="text/javascript">
    $(function () {
        $("#saveForm").bind("click", function () {
            if (signaturepadExaminer.isEmpty()) {
                $("[Id*=ImageValExaminer]").val("_blank");
            } else {
                var base64C = $("#canvasExaminer")[0].toDataURL();
                base64C = base64C.replace("data:image/png;base64,", "");
                $("[Id*=ImageValExaminer]").val(base64C);
            }
            var myopt = $('input[name="radiobutton2"]:checked').val(); // Q9 Progress
            var my2ndopt = $('input[name="RadioDefault"]:checked').val(); // Q10 Rating
            
            //window.alert(myopt);
            //window.alert(my2ndopt);
            var myresult= $('input[name="RadioResult"]:checked').val(); // Selected Result Radio

            $("#resultRadio").val(myresult); // Radio Value Passing In Model Property

            $("#selectedRadio").val(my2ndopt); // Rating
            $("#progressRadio").val(myopt); // Progress
        });
    });
</script>
<script lang="ja" type="text/javascript">
    var wrapperCustomer = document.getElementById("signature-padExaminer"),
        clearButtonCustomer = wrapperCustomer.querySelector(
            "[data-action=clearExaminer]"
        ),
        canvasExaminer = wrapperCustomer.querySelector("canvas"),
        signaturepadExaminer;

    function resizeCanvas() {
        var ratio = window.devicePixelRatio || 1;

        canvasExaminer.width = canvasExaminer.offsetWidth * ratio;
        canvasExaminer.height = canvasExaminer.offsetHeight * ratio;
        canvasExaminer.getContext("2d").scale(ratio, ratio);
    }

    window.onresize = resizeCanvas;
    resizeCanvas();

    signaturepadExaminer = new SignaturePad(canvasExaminer);
    var el = document.getElementById("clear");
    if (el) {
        clearButtonCustomer.addEventListener("click", function (event) {
            signaturepadExaminer.clear();
        });
    }
</script>